{
  "name": "AI Translator Plugin",
  "version": "1.0.0",
  "description": "AI回复抓取和翻译悬浮窗口 - 可以抓取<char>标签内容并实时翻译",
  "author": "YourName",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/ai-translator-plugin",
  "namespace": "ai-translator-plugin",
  "resource": [
    "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/script.js",
    "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/styles.css"
  ],
  "include": [
    "http://localhost:8000/*",
    "https://*.sillytavern.dev/*",
    "https://*.github.io/sillytavern/*"
  ],
  "grant": [
    "GM_setValue",
    "GM_getValue",
    "GM_notification",
    "GM_xmlhttpRequest"
  ],
  "connect": [
    "api.openai.com",
    "localhost",
    "127.0.0.1"
  ],
  "require": [
    "https://cdn.jsdelivr.net/npm/draggable-js@1.0.0/draggable.min.js"
  ],
  "plugin": {
    "type": "floating-window",
    "category": "translation",
    "autoLoad": true,
    "windowTitle": "AI翻译器",
    "windowWidth": 350,
    "windowHeight": 500,
    "windowPosition": {
      "x": 20,
      "y": 20
    },
    "resizable": true,
    "minimizable": true,
    "closeable": true
  },
  "settings": [
    // ... 设置配置保持不变
  ],
  "permissions": [
    "chat-monitor",
    "floating-window",
    "api-calls",
    "notifications",
    "storage"
  ],
  // 移除了 icons 字段
  "compatibility": {
    "sillytavern": ">=1.10.0",
    "browsers": ["chrome", "firefox", "edge"]
  },
  "updateURL": "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/manifest.json",
  "downloadURL": "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/script.js",
  "supportURL": "https://github.com/yourusername/ai-translator-plugin/issues",
  "contributeURL": "https://github.com/yourusername/ai-translator-plugin"
}
