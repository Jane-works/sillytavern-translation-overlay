{
  "name": "AI Translator Plugin",
  "version": "1.0.0",
  "description": "AI回复抓取和翻译悬浮窗口 - 可以抓取<char>标签内容并实时翻译",
  "author": "YourName",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/ai-translator-plugin",
  "namespace": "ai-translator-plugin",
  "resource": [
    "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/script.js",
    "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/styles.css"
  ],
  "include": [
    "http://localhost:8000/*",
    "https://*.sillytavern.dev/*",
    "https://*.github.io/sillytavern/*"
  ],
  "grant": [
    "GM_setValue",
    "GM_getValue",
    "GM_notification",
    "GM_xmlhttpRequest"
  ],
  "connect": [
    "api.openai.com",
    "localhost",
    "127.0.0.1"
  ],
  "require": [
    "https://cdn.jsdelivr.net/npm/draggable-js@1.0.0/draggable.min.js"
  ],
  "plugin": {
    "type": "floating-window",
    "category": "translation",
    "autoLoad": true,
    "windowTitle": "AI翻译器",
    "windowWidth": 350,
    "windowHeight": 500,
    "windowPosition": {
      "x": 20,
      "y": 20
    },
    "resizable": true,
    "minimizable": true,
    "closeable": true
  },
  "settings": [
    {
      "id": "apiUrl",
      "name": "API URL",
      "type": "text",
      "default": "https://api.openai.com/v1",
      "placeholder": "请输入API端点URL",
      "description": "AI API的服务地址"
    },
    {
      "id": "apiKey",
      "name": "API密钥",
      "type": "password",
      "default": "",
      "placeholder": "输入您的API密钥",
      "description": "用于验证API请求的密钥"
    },
    {
      "id": "selectedModel",
      "name": "AI模型",
      "type": "select",
      "default": "gpt-3.5-turbo",
      "options": [
        {"value": "gpt-3.5-turbo", "label": "GPT-3.5 Turbo"},
        {"value": "gpt-4", "label": "GPT-4"},
        {"value": "gpt-4-turbo", "label": "GPT-4 Turbo"},
        {"value": "claude-3-opus", "label": "Claude 3 Opus"},
        {"value": "claude-3-sonnet", "label": "Claude 3 Sonnet"},
        {"value": "claude-3-haiku", "label": "Claude 3 Haiku"},
        {"value": "custom", "label": "自定义模型"}
      ],
      "description": "选择用于翻译的AI模型"
    },
    {
      "id": "translationLanguage",
      "name": "翻译语言",
      "type": "select",
      "default": "zh-CN",
      "options": [
        {"value": "zh-CN", "label": "中文（简体）"},
        {"value": "zh-TW", "label": "中文（繁体）"},
        {"value": "en", "label": "英语"},
        {"value": "ja", "label": "日语"},
        {"value": "ko", "label": "韩语"},
        {"value": "fr", "label": "法语"},
        {"value": "de", "label": "德语"},
        {"value": "es", "label": "西班牙语"},
        {"value": "ru", "label": "俄语"}
      ],
      "description": "选择要翻译成的目标语言"
    },
    {
      "id": "autoTranslate",
      "name": "自动翻译",
      "type": "checkbox",
      "default": true,
      "description": "启用后自动翻译AI回复中的<char>标签内容"
    },
    {
      "id": "showNotifications",
      "name": "显示通知",
      "type": "checkbox",
      "default": true,
      "description": "翻译完成时显示桌面通知"
    },
    {
      "id": "translationDelay",
      "name": "翻译延迟(ms)",
      "type": "number",
      "default": 500,
      "min": 0,
      "max": 5000,
      "description": "AI回复后等待多长时间开始翻译(毫秒)"
    }
  ],
  "permissions": [
    "chat-monitor",
    "floating-window",
    "api-calls",
    "notifications",
    "storage"
  ],
  "compatibility": {
    "sillytavern": ">=1.10.0",
    "browsers": ["chrome", "firefox", "edge"]
  },
  "updateURL": "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/manifest.json",
  "downloadURL": "https://raw.githubusercontent.com/yourusername/ai-translator-plugin/main/script.js",
  "supportURL": "https://github.com/yourusername/ai-translator-plugin/issues",
  "contributeURL": "https://github.com/yourusername/ai-translator-plugin"
}
